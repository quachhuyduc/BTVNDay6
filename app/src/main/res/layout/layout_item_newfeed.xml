<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/llProductItemMain"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/_50sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="@dimen/_100sdp">
            <ImageView
                android:id="@+id/imgAvatar"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userNamme"
                android:text="Kevin De Bruyne"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Suggested for you . 2 hours ago"
                android:layout_marginStart="@dimen/_5sdp"

                android:layout_width="wrap_content"

                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgRemove"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_close"
                android:scaleType="centerCrop"

                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Caption"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">


        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:padding="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon"

                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="10k"
                android:paddingRight="@dimen/_5sdp"
                android:textColor="#121212"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_70sdp"

                android:gravity="center"
                android:hint="100 comments"
                android:textColor="#121212"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tvShares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center"
                android:hint="100 shares"
                android:textColor="#121212"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"

                android:src="@drawable/icon_like"
                android:textColor="#121212"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Like"
                android:layout_marginStart="@dimen/_2sdp"

                android:textColor="#121212"
                android:textSize="@dimen/_15ssp" />

            <ImageView
                android:id="@+id/imgComments"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_5sdp"

                android:src="@drawable/icon_comment"
                android:textColor="#121212"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Comments"

                android:textColor="#121212"
                android:textSize="@dimen/_15ssp" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:src="@drawable/icon_share"
                android:textColor="#121212"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="Share"

                android:textColor="#121212"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>